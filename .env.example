# VibeSync Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Connection
# Format: mongodb+srv://username:password@cluster0.example.mongodb.net/database-name
MONGODB_URI=your-mongodb-connection-string-here

# OpenAI API Key (for job processing and AI features)
# Get one at https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# JWT Secret for authentication
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-secret-key-here

# Environment
# Options: development, production
NODE_ENV=development

# Port for the server
PORT=3000

# CORS Origin (frontend URL)
# For development, typically http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Cloudinary Configuration (for image uploads)
# Sign up at https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Stripe Configuration (for payments)
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# Email Configuration
SMTP_HOST=your-smtp-host-here
SMTP_PORT=587
SMTP_USER=your-email-username-here
SMTP_PASS=your-email-password-here
EMAIL_FROM=noreply@yourdomain.com

# Cron Schedule (for job imports)
# Format: minute hour day month day-of-week
# Examples:
# Every hour: 0 * * * *
# Every 6 hours: 0 */6 * * *
# Every day at 2 AM: 0 2 * * *
# Every 30 minutes: */30 * * * *
CRON_SCHEDULE=0 * * * *

# Logging Level
# Options: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info